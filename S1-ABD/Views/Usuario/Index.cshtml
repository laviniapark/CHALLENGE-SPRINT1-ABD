@model IEnumerable<S1_ABD.DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary mb-3" href="/Usuario/Create">Adicionar Cliente</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Telefone</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nome</td>
                <td>@usuario.Cpf</td>
                <td>@usuario.Telefone</td>
                <td>
                    <a class="btn btn-warning" href="/Usuario/Edit/@usuario.Id">Editar</a>
                    <a class="btn btn-danger" href="/Usuario/Delete/@usuario.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>